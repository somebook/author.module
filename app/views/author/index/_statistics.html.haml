.box.white.padded
  %ul.import-info
    - if can? :blog, Post.new(shard_id: @current_shard.id)
      %li
        .pull-right            
          = link_to(blog_posts_path, class: %w(badge badge-blog), "data-original-title" => "Количество публикаций", rel: "tooltip", "data-placement" => "top") do |link|
            %i.icon-white.icon-file
            = @statistics[:blog]
        = link_to t('author.dashboard.statistics.posts'), blog_posts_path
