= form_for @audio_album, html: { class: %w(form-horizontal), multipart: true } do |f|
  %fieldset
    %header
      %h1= @form_legend
    = render partial: "author/shared/flash_messages"

    .content
      = present @audio_album, :audio_album_form_presenter, f do |p|
        = p.name
        = p.cover
        = p.description
        = p.actions back: audio_albums_path
