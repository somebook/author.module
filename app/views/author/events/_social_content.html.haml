%li
  .clearfix
    %span.pull-right
      = hidden_field_tag "event[infos_attributes][#{event_info_id}][social_contents_attributes][#{social_content.tmp_id}][id]", social_content.id
      = hidden_field_tag "event[infos_attributes][#{event_info_id}][social_contents_attributes][#{social_content.tmp_id}][terminal_id]", social_content.terminal.id
      %label.checkbox.label{ class: social_content.state }
        = hidden_field_tag "event[infos_attributes][#{event_info_id}][social_contents_attributes][#{social_content.tmp_id}][pending]", nil
        = check_box_tag "event[infos_attributes][#{event_info_id}][social_contents_attributes][#{social_content.tmp_id}][pending]", :pending, (social_content.publish? || social_content.published?), "data-terminal-id" => social_content.terminal.id
        = social_content.state.capitalize
      %a.edit.btn.btn-small{ href: "#" }= t('author.post.edit')
    %a.terminal-name
      %i.icon @
      = social_content.terminal.name
      - if social_content.terminal.account.provider == "twitter"
        %span.label.counter 0
  .terminal-form{ style: "display: none;" }
    .generated
      = radio_button_tag("event[infos_attributes][#{event_info_id}][social_contents_attributes][#{social_content.tmp_id}][edited]", false, (social_content.edited.nil? || !social_content.edited), style: "float: left; margin-right: 5px", 'data-social-content-id' => social_content.tmp_id)
      %label{ for: "event[infos_attributes][#{event_info_id}][social_contents_attributes][#{social_content.tmp_id}][edited]", style: "float: left" }= "Generated content:"
      = text_area_tag "event[infos_attributes][#{event_info_id}][social_contents_attributes][#{social_content.tmp_id}][body]", "", cols: 10, rows: 4, disabled: social_content.edited, class: "span7 #{social_content.tmp_id} #{event_info_id}", readonly: true, 'data-provider' => social_content.terminal.account.provider
    .edited
      .copy.clearfix
        %button{ class: %w(btn-success btn) }= raw t('author.post.copy')
      = radio_button_tag("event[infos_attributes][#{event_info_id}][social_contents_attributes][#{social_content.tmp_id}][edited]", true, (social_content.edited), style: "float: left; margin-right: 5px; margin-top: 21px;", 'data-social-content-id' => social_content.tmp_id)
      %label{ for: "event[infos_attributes][#{event_info_id}][social_contents_attributes][#{social_content.tmp_id}][edited]", style: "float: left; margin-top: 19px;" }= "Edited content:"
      = text_area_tag "event[infos_attributes][#{event_info_id}][social_contents_attributes][#{social_content.tmp_id}][body]", social_content.body, cols: 10, rows: 4, disabled: !social_content.edited, class: "span7 #{social_content.tmp_id}", 'data-provider' => social_content.terminal.account.provider


