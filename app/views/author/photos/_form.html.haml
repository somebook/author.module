= form_for [@album, photo], remote: true do |f|
  .control-group
    .control-label
      Автор
    .controls
      = f.text_field :author
  .control-group
    .control-label
      Описание
    .controls
      = f.text_area :summary, rows: 4
  / = f.hidden_field :album_id, photo.album.id
  .form-actions
    = f.submit "Сохранить", class: "btn btn-large btn-primary"
    = f.submit "Закрыть", class: "btn btn-large popover-close", "data-photo-id" => photo.id