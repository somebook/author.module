= form_for [:album, @photo], html: { class: %w(form-horizontal) }, multipart: true do |photo_form|
  %fieldset
    %header
      %h1= @form_legend
    .content
      = present @photo, :photo_form_presenter, photo_form do |p|
        = p.errors
        = p.title
        = p.summary
        = p.file
        = p.album_id @album.id
        = p.actions back: album_photos_path(@album)
