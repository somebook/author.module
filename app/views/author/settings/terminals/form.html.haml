= form_for [:settings, @terminal.account.shard_language, @terminal.account, @terminal], html: { class: %w(form-horizontal) } do |terminal_form|
  %fieldset
    %header
      %h1= @form_legend
    %section.content
      = present @terminal, :terminal_form_presenter, terminal_form do |p|
        = p.errors
        = p.name
        = p.identifier
        = p.actions back: settings_shard_language_account_terminals_path
